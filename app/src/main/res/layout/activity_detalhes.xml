<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    tools:context=".detalhes">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/txt_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cpf"
                android:inputType="textPersonName"
                android:textColorHint="@color/white"
                android:background="@drawable/background_input_field"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorTextSecondary"/>

            <TextView
                android:id="@+id/txt_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="textPersonName"
                android:textColorHint="@color/white"
                android:background="@drawable/background_input_field"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/baseline_phone_24"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorTextSecondary"/>



