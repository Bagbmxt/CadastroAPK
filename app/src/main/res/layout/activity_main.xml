<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFC9EA"
    android:backgroundTint="@color/colorSecondary"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/textView"
            android:layout_width="2000dp"
            android:layout_height="200dp"
            android:background="@drawable/android1"
            android:text="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/botaoADD"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/baseline_person_add_alt_1_24" />

        <ImageView
            android:id="@+id/botaoVer"
            android:layout_marginStart="@dimen/_70sdp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/_200sdp"
            android:background="@drawable/baseline_remove_red_eye_24" />

    </LinearLayout>
</RelativeLayout>